{
  "name": "messageai-functions",
  "version": "1.0.0",
  "description": "Cloud Functions for MessageAI - AI features, notifications, and backend logic",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "lint": "eslint --ext .ts src/",
    "cleanup": "npm run build && node lib/scripts/cleanupConversations.js",
    "seed": "npm run build && node lib/scripts/seedTestMessages.js"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "openai": "^4.20.0",
    "langchain": "^0.1.30",
    "@langchain/openai": "^0.0.25",
    "@langchain/core": "^0.1.52",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-plugin-import": "^2.29.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.0"
  },
  "private": true
}

